    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug example 'web_server'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--example=web_server"
                ],
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/sdk:${env:LD_LIBRARY_PATH}"
                },
            },
            "args": [],
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/sdk:${env:LD_LIBRARY_PATH}",
                "HIK_SDK_PATH": "${workspaceFolder}/sdk",
                "PATH": "${workspaceFolder}/sdk:${env:PATH}"
            },
        },
        {
            "name": "Debug unit tests in library 'hik_net_sdk'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test"
                ],
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/sdk:${env:LD_LIBRARY_PATH}"
                },
            },
            "sourceLanguages": [
                "rust"
            ]
        }
    ]
}